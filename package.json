{
  "name": "rahi-travel-app",
  "version": "1.0.0",
  "description": "Rahi - Smart Travel Companion with AI Assistant, Live Maps, Safety Features, and Community Support",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install && npm run minify",
    "minify": "uglifyjs script.js -o script.min.js && cleancss styles.css -o styles.min.css",
    "serve": "http-server . -p 3000 -o",
    "lint": "eslint script.js",
    "format": "prettier --write *.js *.css *.html",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "travel",
    "tourism",
    "ai",
    "maps",
    "safety",
    "community",
    "mobile-app",
    "pwa",
    "google-maps",
    "gemini-ai"
  ],
  "author": "Kashif Ansari <kashif.ansari@email.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "serve-static": "^1.15.0",
    "node-fetch": "^3.3.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "http-server": "^14.1.1",
    "uglify-js": "^3.17.4",
    "clean-css-cli": "^5.6.2",
    "concurrently": "^8.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kashifansari/rahi-travel-app.git"
  },
  "bugs": {
    "url": "https://github.com/kashifansari/rahi-travel-app/issues"
  },
  "homepage": "https://rahi-travel.app",
  "pwa": {
    "name": "Rahi Travel App",
    "short_name": "Rahi",
    "theme_color": "#4F46E5",
    "background_color": "#F8FAFC",
    "display": "standalone",
    "scope": "/",
    "start_url": "/"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
